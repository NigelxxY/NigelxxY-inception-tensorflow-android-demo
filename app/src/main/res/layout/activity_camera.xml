<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <ListView
        android:id="@+id/image_list"
        android:layout_width="match_parent"
        android:layout_height="460dp"
        android:layout_marginTop="20dp"
        android:dividerHeight="15dp"
        android:divider="#00000000">
    </ListView>

    <Button
        android:id="@+id/image_filter_button"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_below="@+id/image_list"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="120dp"
        android:background="@drawable/filter"/>

    <Button
        android:id="@+id/image_wechat_button"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_below="@+id/image_list"
        android:layout_alignParentRight="true"
        android:layout_marginTop="5dp"
        android:layout_marginRight="120dp"
        android:background="@drawable/icon_wechat"/>


    <Button
        android:id="@+id/imagelist_takephotos"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:background="#DBDBDB"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:text="拍照"
        android:textColor="#000000"/>

    <Button
        android:id="@+id/imagelist_pictures"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:background="#55A6CF"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:text="相册"
        android:textColor="#ffffff"
        />
</RelativeLayout>
